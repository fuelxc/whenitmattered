
<div class="container">
  <div class="row mt-2">
    <div class="col-sm-12 col-md-4"><h1>Businesses</h1></div>
    <div class="col-sm-12 col-md-4 pt-2">
      <%= form_tag businesses_path, method: :get do %>
        <div class="row">
          <div class="col-10">
            <%= react_component('BusinessSearch', id: 'businessSearch', placeHolder: 'Search...', url: businesses_path(format: :json)) %>
          </div>
          <div class="col-2">
            <%= submit_tag 'Go', class: 'btn btn-outline-secondary' %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-sm-12 col-md-4 pt-2">
      <%= link_to new_business_path, class: 'btn btn-outline-primary float-right' do %>
        <%= fa_icon "plus" %> New
      <% end %>
    </div>
  </div>
  <div class="row row-cols-1 row-cols-md-3">
    <%= render partial: "business", collection: @businesses %>
  </div>
  <div class="row d-flex justify-content-end p-3">
    <%= paginate @businesses, theme: 'twitter-bootstrap-4' %>
  </div>
</div>